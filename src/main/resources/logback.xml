<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/Users/kokasiva1/training/sep18-spring-mvc-template/cricket-team.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file : %line] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework"  level="error"/>
    <logger name="com.bellinfo.advanced.springmvc"  level="info"/>
    <root level="warn">
        <appender-ref ref="FILE" />
    </root>
</configuration>